<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MainActivityThere" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="StyleGenericButton">
        <item name="android:layout_margin">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lato_light</item>
    </style>

    <style name="StyleNumberButton" parent="StyleGenericButton">
        <item name="android:background">@drawable/selector_btn_num</item>
    </style>

    <style name="StyleControlButton" parent="StyleGenericButton">
        <item name="android:background">@drawable/selector_btn_clr</item>
    </style>

    <style name="StyleOperatorButton" parent="StyleGenericButton">
        <item name="android:background">@drawable/selector_btn_calc</item>
    </style>

    <style name="StyleControlButton.Backspace">
        <item name="android:padding">@dimen/button_backspace_padding</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="DlgAnim">
        <item name="android:windowEnterAnimation">@anim/slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogAnimation" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DlgAnim</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFrame">@color/transparent</item>
    </style>

    <style name="InputStyle">
        <item name="android:digits">0123456789./*+-:()</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">top|start</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:saveEnabled">true</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="fontFamily">@font/lato_light</item>
    </style>

    <style name="ResultStyle">
        <item name="android:background">@drawable/shape_result_textview</item>
        <item name="android:ems">14</item>
        <item name="android:freezesText">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/textview_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lato_light</item>
    </style>

    <style name="FormatIndicatorStyle">
        <item name="android:background">@drawable/selector_format_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
