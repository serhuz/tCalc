<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="StyleGenericButton">
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="StyleNumberButton" parent="StyleGenericButton">
        <item name="android:background">@drawable/selector_btn_num</item>

    </style>

    <style name="StyleControlButton" parent="StyleGenericButton">
        <item name="android:background">@drawable/selector_btn_clr</item>
    </style>

    <style name="StyleOperatorButton" parent="StyleGenericButton">
        <item name="android:background">@drawable/selector_btn_calc</item>
    </style>

    <style name="DlgAnim">
        <item name="android:windowEnterAnimation">@anim/slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DlgAnim</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@color/transparent</item>
    </style>

</resources>
