<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="ua.sergeimunovarov.tcalc.main.input.InputViewModel"/>
    </data>

    <TableLayout
        android:id="@+id/numpad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="2dp"
        android:background="@color/color_background"
        android:gravity="center"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:weightSum="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_mr"
                style="@style/StyleControlButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleMemoryRecallInput}"
                android:text="@string/btn_mr"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_plus"
                style="@style/StyleOperatorButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_plus"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_minus"
                style="@style/StyleOperatorButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_minus"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_1"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_1"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_2"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_2"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_3"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_3"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_col"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_colon"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_clear"
                style="@style/StyleControlButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleClearInput}"
                android:text="@string/btn_clear"
                tools:ignore="ButtonStyle"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_ms"
                style="@style/StyleControlButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleMemoryStoreInput}"
                android:text="@string/btn_ms"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_multiply"
                style="@style/StyleOperatorButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_multiply"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_divide"
                style="@style/StyleOperatorButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_divide"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_4"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_4"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_5"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_5"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_6"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_6"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_dot"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_dot"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_del"
                style="@style/StyleControlButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleDeleteInput}"
                android:text="@string/btn_backspace"
                tools:ignore="ButtonStyle"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_ans"
                style="@style/StyleControlButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleInsertPreviousAnswerInput}"
                android:text="@string/btn_answer"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_par1"
                style="@style/StyleOperatorButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_parenthesis_left"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_par2"
                style="@style/StyleOperatorButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_parenthesis_right"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_7"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_7"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_8"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_8"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_9"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_9"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_0"
                style="@style/StyleNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleSymbolInput}"
                android:text="@string/btn_0"
                tools:ignore="ButtonStyle"/>

            <ua.sergeimunovarov.tcalc.main.views.CustomButton
                android:id="@+id/btn_eq"
                style="@style/StyleControlButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{model::handleEqualInput}"
                android:text="@string/btn_calculate"
                tools:ignore="ButtonStyle"/>

        </TableRow>
    </TableLayout>
</layout>
